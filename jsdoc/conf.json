{
    "tags": {
        "allowUnknownTags": true
    },
    "source": {
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "plugins": [
            "plugins/markdown",
            "./jsdoc/files"
    ],
    "extra_mainpages" : [
        { "path" : "./docs/Widgets.md", "name" : "Layout" },
        "./docs/Rendering.md"
    ],
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        "default": {
            "staticFiles": {
                "include" : [
                    "./jsdoc/screen.css"
                ]
            },
            "outputSourceFiles": true,
            "layoutFile" : "jsdoc/layout.tmpl",
            "useLongnameInNav" : true
        }
    }
}
